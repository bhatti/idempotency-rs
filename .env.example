# Example environment configuration

# Logging
RUST_LOG=debug,sqlx=warn,hyper=info

# Database
DATABASE_URL=sqlite:./idempotency.db
# DATABASE_URL=postgres://user:password@localhost/idempotency
# DATABASE_URL=redis://localhost:6379

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=3000

# Idempotency Settings
IDEMPOTENCY_TTL_HOURS=24
IDEMPOTENCY_LOCK_TIMEOUT_SECONDS=30

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
